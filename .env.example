APP_NAME="Wallet API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database (Docker Internal Network)
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=wallet
DB_USERNAME=walletuser
DB_PASSWORD=root

# Queue & Session
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Cache & Redis (Docker Internal Network)
CACHE_STORE=redis
MEMCACHED_HOST=127.0.0.1
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail (Mailpit/Log by default)
MAIL_MAILER=log
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Authentication (JWT)
# Generate with: docker-compose exec app php artisan jwt:secret
JWT_SECRET=
JWT_ALGO=HS256
# Token valid for 15 minutes (short lived for security)
JWT_TTL=15
# Refresh valid for 2 weeks (long lived for UX)
JWT_REFRESH_TTL=20160

# Idempotency & Features
# Limits daily operations or checks concurrency
MAX_LOCK_WAIT_SECONDS=5